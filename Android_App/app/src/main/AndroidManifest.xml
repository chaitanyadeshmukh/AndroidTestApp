<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />
    <queries>
        <intent>
            <action android:name="android.intent.action.VIEW" />
            <data android:scheme="example" />
        </intent>
    </queries>
    <application
        android:allowBackup="true"
        android:icon="@android:drawable/menu_frame"
        android:label="@string/app_name"
        android:roundIcon="@android:drawable/menu_frame"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplication">

        <activity
            android:name="com.example.merchant.MainActivity"
            android:exported="true"
            android:launchMode="singleTask">
            <tools:validation testUrl="https://www.axpco.com/pisp/src/lisa-app-bank/merchant_redirect" />

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <intent-filter android:label="Return Deep Link"
                android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:scheme="https"
                    android:host="www.axpco.com"
                    android:pathPrefix="/pisp/src/lisa-app-bank/merchant_redirect" />
            </intent-filter>
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="https" />
                <data android:host="www.axpco.com" />
                <data android:pathPattern="/pisp/src/lisa-app-bank/merchant_redirect" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.example.merchant.WebViewActivity"
            android:exported="true" />

    </application>

</manifest>